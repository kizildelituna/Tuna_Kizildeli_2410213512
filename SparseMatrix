#include <stdio.h>

int main() {

    int mat[3][3] = {
        {0, 0, 5},
        {0, 8, 0},
        {0, 0, 3}
    };

    int sparse[10][3];
    int k = 0;

    printf("Normal Matris:\n");
    for(int i = 0; i < 3; i++) {
        for(int j = 0; j < 3; j++) {
            printf("%d ", mat[i][j]);
        }
        printf("\n");
    }

    for(int i = 0; i < 3; i++) {
        for(int j = 0; j < 3; j++) {
            if(mat[i][j] != 0) {
                sparse[k][0] = i;
                sparse[k][1] = j;
                sparse[k][2] = mat[i][j];
                k++;
            }
        }
    }

    printf("\nSparse Matris (satır sütun değer):\n");
    for(int i = 0; i < k; i++) {
        printf("%d %d %d\n", sparse[i][0], sparse[i][1], sparse[i][2]);
    }

    return 0;
}
