#include <stdio.h>

void hanoi(int n, char kaynak, char yardimci, char hedef) {
    if (n == 1) {
        printf("Disk 1'i %c'den %c'ye tasi\n", kaynak, hedef);
        return;
    }

    hanoi(n - 1, kaynak, hedef, yardimci);        // üsttekileri yardımcıya taşı
    printf("Disk %d'i %c'den %c'ye tasi\n", n, kaynak, hedef); // en alttakini taşı
    hanoi(n - 1, yardimci, kaynak, hedef);        // üsttekileri hedefe taşı
}

int main() {
    int n;

    printf("Disk sayisini gir: ");
    scanf("%d", &n);

    hanoi(n, 'A', 'B', 'C'); // A = kaynak, B = yardimci, C = hedef

    return 0;
}
